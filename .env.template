# Discord Game Economy Analysis Tool - Configuration
# Copy this file to .env and update with your settings

# Discord API Configuration
DISCORD_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
DISCORD_CHANNEL_ID="1344274217969123381"

# Analysis Configuration
OPEN_BROWSER_AUTOMATICALLY=true
MAX_WORKERS=4                    # Number of parallel workers for extraction (set to 0 for auto)

# UI Configuration
PORT=5000                        # Port for the web UI
THEME="dark"                     # UI theme (light/dark)
IMAGE_SIZE_FACTOR=1.5            # Size factor for generated images (1.0 = default)

# Debug Options
DEBUG_MODE=false                 # Enable detailed logging
LOG_LEVEL="INFO"                 # Logging level (DEBUG, INFO, WARNING, ERROR)

# Data Options
BACKUP_EXPORTS=true              # Create backups of export files
MAX_BACKUP_FILES=5               # Maximum number of backup files to keep 